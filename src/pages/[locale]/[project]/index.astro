---
import projects from 'content/projects'

import Layout from 'layouts/Layout.astro'
import { Project } from 'components'

export const getStaticPaths = () => {
    const locales = ['en', 'lv', 'ru']
    const projects = ['tasker', 'lapchess', 'carmarket'] as const

    const paths = locales
        .map((locale) => projects.map((project) => ({ params: { locale, project } })))
        .flat()

    return paths
}

const project = projects.find((element) => element.title.toLowerCase() === Astro.params.project)!
---

<Layout title={project.title}>
    <Project {...project} />
</Layout>
