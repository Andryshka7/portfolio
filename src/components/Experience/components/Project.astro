---
import { getRelativeLocaleUrl } from 'astro:i18n'
import { useTranslations } from 'i18n'
import type { Locale, Project } from 'types'

interface Props extends Project {}

const { title, icon, about, preview } = Astro.props

const locale = Astro.currentLocale as Locale
const t = useTranslations(locale)
---

<div class='rounded-3xl bg-zinc-200 px-8 pt-5 dark:bg-[#2A2A67] sm:px-10'>
    <div class='m-auto flex w-fit items-center sm:mt-1'>
        <img src={icon} class='sm:scale-1 h-16 scale-75 sm:h-20' alt='' />
        <h2 class='text-4xl font-bold text-zinc-800 dark:text-white'>
            {title}
        </h2>
    </div>
    <h3
        class='mt-1 w-72 text-base font-bold text-zinc-800 dark:text-white sm:mt-3 sm:w-80 sm:text-lg'
    >
        {t(`projects.${title.toLowerCase()}.brief-description`)}
    </h3>
    <div class='m-auto my-6 flex w-fit gap-8 sm:my-7 sm:gap-10'>
        <a
            href={getRelativeLocaleUrl(locale, about)}
            class='w-24 rounded-md border-2 border-red-400 font-medium text-red-400 duration-300 hover:border-slate-400 hover:bg-slate-400 hover:text-zinc-200 dark:border-[#05CEC2] dark:bg-[#2A2A67] dark:text-teal-400 dark:hover:border-slate-200 dark:hover:bg-slate-200 dark:hover:text-[#2A2A67] sm:w-[120px] sm:py-0.5'
        >
            {t('ui.buttons.about')}
        </a>
        <a
            href={preview}
            class='w-24 rounded-md bg-red-400 font-medium text-zinc-200 duration-300 hover:bg-slate-400 dark:bg-[#05CEC2] dark:text-[#2A2A67] dark:hover:bg-slate-200 sm:w-[120px] sm:py-0.5'
        >
            {t('ui.buttons.preview')}
        </a>
    </div>
</div>
