---
// Testimonials component showcasing client feedback and recommendations
import { Quote, Star, User, Building2, Calendar } from '@lucide/astro'

enum ThemeEnum {
    CYAN = 'cyan',
    GREEN = 'green',
    PURPLE = 'purple'
}

const TESTIMONIALS = [
    {
        name: 'Senior Backend Developer',
        testimonial:
            'Built crypto platform frontend with sub-100ms latency. Led WebSocket optimizations.',
        company: 'Cryptonit',
        rating: 5,
        theme: ThemeEnum.CYAN
    },

    {
        name: 'E-commerce Client',
        testimonial: 'Delivered scalable e-commerce solution. Handles high traffic seamlessly.',
        company: 'Retail Startup',
        rating: 5,
        theme: ThemeEnum.GREEN
    },

    {
        name: 'International Team Lead',
        testimonial: 'Proven collaborator in diverse teams maintaining quality and deadlines.',
        company: 'Global Tech Company',
        rating: 5,
        theme: ThemeEnum.PURPLE
    }
]

const THEMES = {
    [ThemeEnum.CYAN]: {
        border: 'border-cyan-500/30',
        gradient: 'from-cyan-900/20 to-gray-800/40',
        icon: 'text-cyan-400',
        avatarGradient: 'from-cyan-500 to-blue-500',
        hoverBorder: 'hover:border-cyan-400/50',
        hoverShadow: 'hover:shadow-cyan-500/10'
    },

    [ThemeEnum.GREEN]: {
        border: 'border-green-500/30',
        gradient: 'from-green-900/20 to-gray-800/40',
        icon: 'text-green-400',
        avatarGradient: 'from-green-500 to-emerald-500',
        hoverBorder: 'hover:border-green-400/50',
        hoverShadow: 'hover:shadow-green-500/10'
    },

    [ThemeEnum.PURPLE]: {
        border: 'border-purple-500/30',
        gradient: 'from-purple-900/20 to-gray-800/40',
        icon: 'text-purple-400',
        avatarGradient: 'from-purple-500 to-pink-500',
        hoverBorder: 'hover:border-purple-400/50',
        hoverShadow: 'hover:shadow-purple-500/10'
    }
}
---

<section id='testimonials' class='bg-gray-900 py-16'>
    <div class='max-w-8xl mx-auto px-4 sm:px-6 lg:px-8'>
        <h2 class='relative mb-16 text-center text-3xl font-bold text-white'>
            <span class='relative z-10'>What People Say</span>
            <div
                class='absolute -inset-1 rounded-full bg-gradient-to-r from-cyan-500 to-blue-500 opacity-20 blur'
            >
            </div>
        </h2>

        <div class='grid gap-6 md:grid-cols-2 lg:grid-cols-3'>
            {
                TESTIMONIALS.map(({ name, testimonial, company, rating, theme }) => {
                    const { border, gradient, icon, avatarGradient, hoverBorder, hoverShadow } =
                        THEMES[theme]

                    return (
                        <div
                            class={`group rounded-xl border ${border} bg-gradient-to-r ${gradient} p-6 shadow-lg transition-all duration-300 ${hoverBorder} ${hoverShadow}`}
                        >
                            <div class='mb-4 flex items-center space-x-1'>
                                {Array.from({ length: rating }).map((_, i) => (
                                    <Star class='h-4 w-4 fill-yellow-400 text-yellow-400' />
                                ))}
                            </div>

                            <Quote class={`mb-4 h-8 w-8 ${icon}`} />

                            <p class='mb-6 text-gray-300 italic'>"{testimonial}"</p>

                            <div class='flex items-center space-x-3'>
                                <div
                                    class={`flex h-12 w-12 items-center justify-center rounded-full bg-gradient-to-r ${avatarGradient}`}
                                >
                                    <User class='h-6 w-6 text-white' />
                                </div>
                                <div>
                                    <h4 class='font-semibold text-white'>{name}</h4>
                                    <div class='flex items-center space-x-2 text-sm text-gray-400'>
                                        <Building2 class='h-4 w-4' />
                                        <span>{company}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    )
                })
            }
        </div>
        <!-- Call to Action -->
        <div class='mt-16 text-center'>
            <div
                class='rounded-xl border border-cyan-500/30 bg-gradient-to-r from-cyan-900/20 to-gray-800/40 p-8'
            >
                <h3 class='mb-4 text-2xl font-bold text-white'>Ready to Work Together?</h3>
                <p class='mb-6 text-gray-300'>
                    Join the list of satisfied clients and colleagues who have experienced
                    exceptional results.
                </p>
                <a
                    href='#contact'
                    class='inline-flex items-center rounded-lg bg-gradient-to-r from-cyan-600 to-blue-600 px-8 py-3 font-semibold text-white transition-all duration-300 hover:scale-105 hover:from-cyan-700 hover:to-blue-700 hover:shadow-lg hover:shadow-cyan-500/25'
                >
                    Start Your Project
                </a>
            </div>
        </div>
    </div>
</section>
