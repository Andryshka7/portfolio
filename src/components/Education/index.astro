---
// Education component with academic background and courses
import { GraduationCap, School, BookOpen, Code } from '@lucide/astro'

enum ThemeEnum {
    CYAN = 'cyan',
    BLUE = 'blue',
    PURPLE = 'purple',
    GREEN = 'green'
}

const EDUCATION = [
    {
        name: 'University of Latvia',
        degree: 'Computer Science',
        year: '2024-present',
        description:
            'Currently in the 2nd year, 3rd semester, with a focus on computer science fundamentals and practical applications in software engineering.',
        icon: GraduationCap,
        status: 'Current',
        theme: ThemeEnum.CYAN
    },

    {
        name: 'Riga State Classical Gymnasium',
        degree: 'Electronics & Telecommunication Faculty',
        year: '2021-2024',
        description:
            'Gained technical foundation in electronics and communication systems, which built a strong analytical base for my programming journey.',
        icon: School,
        status: 'Completed',
        theme: ThemeEnum.BLUE
    }
]

const COURSES = [
    {
        name: 'Datorium Coding Courses',
        degree: 'Python & JavaScript',
        year: '2022',
        description:
            'Hands-on training in Python and JavaScript, with a focus on algorithms, problem-solving, and building several small projects.',
        icon: BookOpen,
        status: 'Completed',
        theme: ThemeEnum.GREEN
    },

    {
        name: 'Fireship Courses',
        degree: 'Next.js',
        year: '2023',
        description:
            'Learned advanced concepts of Next.js and server-side rendering, applied later in production projects.',
        icon: Code,
        status: 'Completed',
        theme: ThemeEnum.PURPLE
    }
]

const THEMES = {
    [ThemeEnum.CYAN]: {
        border: 'border-cyan-500/30',
        gradient: 'from-cyan-900/20 to-gray-800/40',
        icon: 'text-cyan-400',
        badge: 'bg-cyan-500/20 text-cyan-400'
    },

    [ThemeEnum.BLUE]: {
        border: 'border-blue-500/30',
        gradient: 'from-blue-900/20 to-gray-800/40',
        icon: 'text-blue-400',
        badge: 'bg-blue-500/20 text-blue-400'
    },

    [ThemeEnum.PURPLE]: {
        border: 'border-purple-500/30',
        gradient: 'from-purple-900/20 to-gray-800/40',
        icon: 'text-purple-400',
        badge: 'bg-purple-500/20 text-purple-400'
    },
    [ThemeEnum.GREEN]: {
        border: 'border-green-500/30',
        gradient: 'from-green-900/20 to-gray-800/40',
        icon: 'text-green-400',
        badge: 'bg-green-500/20 text-green-400'
    }
}
---

<section id='education' class='bg-gray-900 py-20' data-nosnippet>
    <div class='max-w-8xl mx-auto px-4 sm:px-6 lg:px-8'>
        <h2 class='relative mb-16 text-center text-3xl font-bold text-white'>
            <span class='relative z-10'>Education & Learning</span>
            <div
                class='absolute -inset-1 rounded-full bg-gradient-to-r from-cyan-500 to-blue-500 opacity-20 blur'
            >
            </div>
        </h2>

        <div class='grid gap-8 lg:grid-cols-2'>
            <!-- Formal Education -->
            <div class='space-y-6'>
                <h3 class='mb-6 text-2xl font-bold text-white'>Formal Education</h3>

                {
                    EDUCATION.map((item) => {
                        const theme = THEMES[item.theme]
                        const IconComponent = item.icon

                        return (
                            <div
                                class={`rounded-xl border ${theme.border} bg-gradient-to-r ${theme.gradient} p-6 shadow-lg`}
                            >
                                <div class='mb-3 flex items-center justify-between'>
                                    <div class='flex items-center gap-3'>
                                        <IconComponent class={`h-5 w-5 ${theme.icon}`} />
                                        <h4 class='text-lg font-bold text-white'>{item.name}</h4>
                                    </div>
                                    <span
                                        class={`rounded-full ${theme.badge} px-3 py-1 text-xs font-medium`}
                                    >
                                        {item.status}
                                    </span>
                                </div>
                                <p class='mb-2 text-sm text-gray-400'>
                                    {item.degree} • {item.year}
                                </p>
                                <p class='text-sm text-gray-300'>{item.description}</p>
                            </div>
                        )
                    })
                }
            </div>

            <!-- Courses & Training -->
            <div class='space-y-6'>
                <h3 class='mb-6 text-2xl font-bold text-white'>Courses & Training</h3>

                {
                    COURSES.map((item) => {
                        const theme = THEMES[item.theme]
                        const IconComponent = item.icon

                        return (
                            <div
                                class={`rounded-xl border ${theme.border} bg-gradient-to-r ${theme.gradient} p-6 shadow-lg`}
                            >
                                <div class='mb-3 flex items-center gap-3'>
                                    <IconComponent class={`h-5 w-5 ${theme.icon}`} />
                                    <h4 class='text-lg font-bold text-white'>{item.name}</h4>
                                </div>
                                <p class='mb-2 text-sm text-gray-400'>
                                    {item.degree} • {item.year}
                                </p>
                                <p class='text-sm text-gray-300'>{item.description}</p>
                            </div>
                        )
                    })
                }
            </div>
        </div>
    </div>
</section>
