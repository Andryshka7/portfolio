---
// Hero component with enhanced design
import { Mail, Phone, MapPin, CheckCircle } from '@lucide/astro'

enum ThemeEnum {
    CYAN = 'cyan',
    BLUE = 'blue',
    PURPLE = 'purple',
    GREEN = 'green'
}

const CONTACT_INFO = [
    { name: 'Email', icon: Mail, value: 'mailto:contact@andryshka.com' },
    { name: 'Phone', icon: Phone, value: 'tel:+371 28176717' },
    { name: 'Location', icon: MapPin, value: 'Riga, Latvia' }
]

const TECHNOLOGIES = [
    { name: 'React/Next.js', theme: ThemeEnum.CYAN },
    { name: 'NestJS/Node.js', theme: ThemeEnum.BLUE },
    { name: 'TypeScript', theme: ThemeEnum.PURPLE },
    { name: 'Web3 / DeFi', theme: ThemeEnum.GREEN }
]

const THEMES = {
    [ThemeEnum.CYAN]: {
        border: 'border-cyan-500/30',
        background: 'bg-cyan-600/20',
        text: 'text-cyan-400'
    },

    [ThemeEnum.BLUE]: {
        border: 'border-blue-500/30',
        background: 'bg-blue-600/20',
        text: 'text-blue-400'
    },

    [ThemeEnum.PURPLE]: {
        border: 'border-purple-500/30',
        background: 'bg-purple-600/20',
        text: 'text-purple-400'
    },

    [ThemeEnum.GREEN]: {
        border: 'border-green-500/30',
        background: 'bg-green-600/20',
        text: 'text-green-400'
    }
}
---

<section
    id='home'
    class='relative flex min-h-screen items-center justify-center overflow-hidden bg-gradient-to-br from-gray-900 via-gray-800 to-black'
>
    <!-- Background decorative elements -->
    <div class='absolute inset-0'>
        <div
            class='absolute top-20 -right-20 h-96 w-96 rounded-full bg-gradient-to-br from-cyan-500/10 to-blue-600/10 blur-3xl'
        >
        </div>
        <div
            class='absolute bottom-20 -left-20 h-80 w-80 rounded-full bg-gradient-to-tr from-purple-500/10 to-pink-600/10 blur-3xl'
        >
        </div>
        <div
            class='absolute top-1/2 left-1/2 h-[600px] w-[600px] -translate-x-1/2 -translate-y-1/2 transform rounded-full bg-gradient-to-r from-cyan-500/5 to-blue-600/5 blur-3xl'
        >
        </div>
    </div>

    <div class='max-w-8xl relative z-10 mx-auto px-4 pt-32 pb-20 sm:px-6 lg:px-8'>
        <div class='grid items-center gap-12 lg:grid-cols-2'>
            <!-- Content -->
            <div class='space-y-8'>
                <!-- Name and Title -->
                <div class='space-y-4'>
                    <div class='relative inline-block'>
                        <h1
                            class='text-4xl leading-tight font-bold text-white sm:text-6xl lg:text-7xl'
                        >
                            Andrey Lapchik
                        </h1>
                        <div
                            class='absolute -inset-1 rounded-lg bg-gradient-to-r from-cyan-500/20 to-blue-600/20 blur-xl'
                        >
                        </div>
                    </div>
                    <h2
                        class='text-xl leading-relaxed font-medium text-cyan-400 sm:text-2xl lg:text-3xl'
                    >
                        Full-Stack Developer
                    </h2>
                </div>

                <!-- Description -->
                <div class='space-y-5'>
                    <p class='max-w-2xl text-lg leading-relaxed text-gray-300 sm:text-xl'>
                        Full-stack developer building high-performance applications and real-time
                        systems. Passionate about clean code and optimal performance.
                    </p>

                    <div class='flex items-center gap-2 text-emerald-400'>
                        <CheckCircle class='h-5 w-5' />
                        <span class='text-sm font-medium'
                            >Available for full-time positions and contract work</span
                        >
                    </div>
                </div>

                <!-- Core Skills -->
                <div class='flex flex-wrap gap-3'>
                    {
                        TECHNOLOGIES.map((technology) => {
                            const { border, background, text } = THEMES[technology.theme]

                            return (
                                <span
                                    class={`rounded-full border ${border} ${background} px-4 py-2 text-sm font-medium ${text}`}
                                >
                                    {technology.name}
                                </span>
                            )
                        })
                    }
                </div>

                <!-- Contact Info -->
                <div class='space-y-3 text-gray-300'>
                    {
                        CONTACT_INFO.map((info) => (
                            <div class='flex items-center gap-3'>
                                <info.icon class='h-5 w-5 text-cyan-400' />
                                <a href={info.value} class='transition-colors hover:text-cyan-400'>
                                    {info.value.replace(/^(mailto:|tel:)/, '')}
                                </a>
                            </div>
                        ))
                    }
                </div>

                <!-- Quick Links -->
                <div class='flex flex-col gap-4 sm:flex-row'>
                    <a
                        href='#experience'
                        class='rounded-lg bg-gradient-to-r from-cyan-600 to-blue-600 px-8 py-4 text-center font-semibold text-white transition-all duration-300 hover:scale-105 hover:from-cyan-700 hover:to-blue-700 hover:shadow-lg hover:shadow-cyan-500/25'
                    >
                        View Experience
                    </a>
                    <a
                        href='#contact'
                        class='rounded-lg border border-cyan-500/50 px-8 py-4 text-center font-semibold text-cyan-400 transition-all duration-300 hover:bg-cyan-500/10'
                    >
                        Get In Touch
                    </a>
                </div>
            </div>

            <!-- Photo -->
            <div class='flex justify-center lg:justify-end'>
                <div class='relative'>
                    <!-- Main image container -->
                    <div class='relative'>
                        <div
                            class='h-64 w-64 overflow-hidden rounded-4xl border-4 border-gray-700/50 shadow-2xl sm:h-80 sm:w-80'
                        >
                            <img
                                src='/me.png'
                                alt='Andrey Lapchik - Full-Stack Developer'
                                class='h-full w-full object-cover'
                                loading='lazy'
                                decoding='async'
                                width='320'
                                height='320'
                            />
                        </div>

                        <!-- Main glow effect -->
                        <div
                            class='absolute -inset-4 -z-10 animate-pulse rounded-2xl bg-gradient-to-r from-cyan-500/20 to-blue-600/20 blur-2xl'
                        >
                        </div>

                        <!-- Additional glow layers -->
                        <div
                            class='absolute -inset-6 -z-20 rounded-2xl bg-gradient-to-r from-purple-500/10 to-pink-500/10 blur-3xl'
                        >
                        </div>
                    </div>

                    <!-- Floating geometric shapes -->
                    <div
                        class='absolute -top-8 -right-8 h-6 w-6 animate-bounce rounded-full bg-gradient-to-r from-cyan-400 to-blue-500'
                        style='animation-delay: 0s; animation-duration: 3s;'
                    >
                    </div>
                    <div
                        class='absolute -bottom-6 -left-6 h-4 w-4 animate-bounce rounded-full bg-gradient-to-r from-purple-400 to-pink-500'
                        style='animation-delay: 1s; animation-duration: 2.5s;'
                    >
                    </div>
                    <div
                        class='absolute top-1/2 -right-12 h-3 w-3 animate-bounce rounded-full bg-gradient-to-r from-green-400 to-emerald-500'
                        style='animation-delay: 2s; animation-duration: 2.8s;'
                    >
                    </div>
                    <div
                        class='absolute -top-4 left-1/2 h-5 w-5 animate-bounce rounded-full bg-gradient-to-r from-yellow-400 to-orange-500'
                        style='animation-delay: 0.5s; animation-duration: 3.2s;'
                    >
                    </div>

                    <!-- Floating tech icons (using CSS shapes as placeholders) -->
                    <div
                        class='absolute -top-12 left-1/4 h-8 w-8 animate-pulse rounded-lg border border-cyan-400/30 bg-gradient-to-r from-cyan-500/20 to-blue-500/20'
                        style='animation-delay: 1.5s;'
                    >
                        <div
                            class='flex h-full w-full items-center justify-center text-xs font-bold text-cyan-400'
                        >
                            R
                        </div>
                    </div>
                    <div
                        class='absolute right-1/4 -bottom-8 h-8 w-8 animate-pulse rounded-lg border border-purple-400/30 bg-gradient-to-r from-purple-500/20 to-pink-500/20'
                        style='animation-delay: 2.5s;'
                    >
                        <div
                            class='flex h-full w-full items-center justify-center text-xs font-bold text-purple-400'
                        >
                            T
                        </div>
                    </div>
                    <div
                        class='absolute top-1/3 -left-12 h-8 w-8 animate-pulse rounded-lg border border-green-400/30 bg-gradient-to-r from-green-500/20 to-emerald-500/20'
                        style='animation-delay: 0.8s;'
                    >
                        <div
                            class='flex h-full w-full items-center justify-center text-xs font-bold text-green-400'
                        >
                            N
                        </div>
                    </div>

                    <!-- Rotating ring effect -->
                    <div class='absolute -inset-8 -z-30'>
                        <div
                            class='h-full w-full animate-spin rounded-full border border-cyan-500/20'
                            style='animation-duration: 20s;'
                        >
                        </div>
                        <div
                            class='absolute inset-2 h-full w-full animate-spin rounded-full border border-purple-500/20'
                            style='animation-duration: 15s; animation-direction: reverse;'
                        >
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
