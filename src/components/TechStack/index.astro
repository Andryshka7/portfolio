---
// Skills component for the technical expertise section
import { Monitor, Server, Settings, Globe } from '@lucide/astro'

const FRONTEND = [
    { name: 'React/Next.js', level: '95%' },
    { name: 'TypeScript', level: '92%' },
    { name: 'Tailwind CSS', level: '89%' },
    { name: 'Redux/Zustand', level: '86%' },
    { name: 'TradingView Charts', level: '83%' }
]

const BACKEND = [
    { name: 'Node.js/NestJS', level: '93%' },
    { name: 'WebSockets/SSE', level: '90%' },
    { name: 'REST APIs/GraphQL', level: '87%' },
    { name: 'Redis/PostgreSQL', level: '84%' },
    { name: 'Blockchain APIs', level: '81%' }
]

const TOOLS = [
    { name: 'Git/Docker', level: '90%' },
    { name: 'Vite/Webpack', level: '86%' },
    { name: 'Sentry/LogRocket', level: '83%' },
    { name: 'CI/CD Pipelines', level: '80%' },
    { name: 'AWS/Vercel', level: '78%' }
]

const LANGUAGES = [
    { name: 'Russian', level: 'Native' },
    { name: 'English', level: 'Professional' },
    { name: 'Latvian', level: 'Fluent' }
]
---

<section id='tech-stack' class='bg-gray-900 py-20' data-nosnippet>
    <div class='max-w-8xl mx-auto px-4 sm:px-6 lg:px-8'>
        <h2 class='relative mb-8 text-center text-3xl font-bold text-white'>
            <span class='relative z-10'>Technical Expertise</span>
            <div
                class='absolute -inset-1 rounded-full bg-gradient-to-r from-cyan-500 to-blue-500 opacity-20 blur'
            >
            </div>
        </h2>
        <div class='grid gap-8 md:grid-cols-3'>
            <!-- Frontend -->

            <div
                class='group rounded-xl border border-gray-700/50 bg-gray-800/50 p-6 backdrop-blur-sm transition-all duration-300 hover:border-cyan-500/50 hover:bg-gray-800/70 hover:shadow-lg hover:shadow-cyan-500/25'
            >
                <div class='mb-6 text-center'>
                    <Monitor
                        class='mx-auto mb-4 h-12 w-12 text-cyan-400 transition-transform duration-300 group-hover:scale-110'
                    />
                    <h3
                        class='text-xl font-bold text-white transition-colors duration-300 group-hover:text-cyan-400'
                    >
                        Frontend Development
                    </h3>
                </div>
                <div class='space-y-3'>
                    {
                        FRONTEND.map((skill) => (
                            <div class='flex items-center justify-between'>
                                <span class='text-gray-300'>{skill.name}</span>
                                <div class='h-2 w-20 overflow-hidden rounded-full bg-gray-700'>
                                    <div
                                        class={`h-full rounded-full bg-gradient-to-r from-cyan-500 to-blue-500 transition-all duration-1000 ease-out`}
                                        style={`width: ${skill.level}`}
                                    />
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>

            <!-- Backend -->

            <div
                class='group rounded-xl border border-gray-700/50 bg-gray-800/50 p-6 backdrop-blur-sm transition-all duration-300 hover:border-green-500/50 hover:bg-gray-800/70 hover:shadow-lg hover:shadow-green-500/25'
            >
                <div class='mb-6 text-center'>
                    <Server
                        class='mx-auto mb-4 h-12 w-12 text-green-400 transition-transform duration-300 group-hover:scale-110'
                    />
                    <h3
                        class='text-xl font-bold text-white transition-colors duration-300 group-hover:text-green-400'
                    >
                        Backend Development
                    </h3>
                </div>
                <div class='space-y-3'>
                    {
                        BACKEND.map((skill) => (
                            <div class='flex items-center justify-between'>
                                <span class='text-gray-300'>{skill.name}</span>
                                <div class='h-2 w-20 overflow-hidden rounded-full bg-gray-700'>
                                    <div
                                        class={`h-full rounded-full bg-gradient-to-r from-green-500 to-emerald-500 transition-all duration-1000 ease-out`}
                                        style={`width: ${skill.level}`}
                                    />
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>

            <!-- Tools & DevOps -->
            <div
                class='group rounded-xl border border-gray-700/50 bg-gray-800/50 p-6 backdrop-blur-sm transition-all duration-300 hover:border-orange-500/50 hover:bg-gray-800/70 hover:shadow-lg hover:shadow-orange-500/25'
            >
                <div class='mb-6 text-center'>
                    <Settings
                        class='mx-auto mb-4 h-12 w-12 text-orange-400 transition-transform duration-300 group-hover:scale-110'
                    />
                    <h3
                        class='text-xl font-bold text-white transition-colors duration-300 group-hover:text-orange-400'
                    >
                        Tools & DevOps
                    </h3>
                </div>
                <div class='space-y-3'>
                    {
                        TOOLS.map((skill) => (
                            <div class='flex items-center justify-between'>
                                <span class='text-gray-300'>{skill.name}</span>
                                <div class='h-2 w-20 overflow-hidden rounded-full bg-gray-700'>
                                    <div
                                        class={`h-full rounded-full bg-gradient-to-r from-orange-500 to-red-500 transition-all duration-1000 ease-out`}
                                        style={`width: ${skill.level}`}
                                    />
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Language Proficiency -->
    <div class='max-w-8xl mx-auto mt-16 px-4 sm:px-6 lg:px-8'>
        <h3 class='mb-8 text-center text-2xl font-bold text-white'>Language Proficiency</h3>
        <div class='grid gap-6 md:grid-cols-2 lg:grid-cols-3'>
            {
                LANGUAGES.map((language) => (
                    <div class='rounded-lg border border-gray-700/50 bg-gray-800/50 p-4 text-center'>
                        <Globe class='mx-auto mb-2 h-8 w-8 text-cyan-400' />
                        <div class='font-semibold text-white'>{language.name}</div>
                        <div class='text-sm text-cyan-400'>{language.level}</div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
