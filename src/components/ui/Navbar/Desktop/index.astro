---
import { useTranslations } from 'i18n'
import type { Locale } from 'types'

import LanguageSelector from '../shared/LanguageSelector.astro'
import ThemeSelector from '../shared/ThemeSelector.astro'

const locale = Astro.currentLocale as Locale

const t = useTranslations(locale)

const homeLink = `${Astro.url.origin}/${locale}`
---

<nav class='hidden w-full items-center justify-between px-12 py-8 lg:flex'>
    <a class='-mt-1.5 text-4xl font-bold text-zinc-800 dark:text-white' href={homeLink}>
        {t('title')}
    </a>

    <div class='mx-4 ml-10 hidden min-w-fit items-center gap-8 text-xl font-semibold md:flex'>
        <a class='text-zinc-700 dark:text-white' href='#about'>
            {t('ui.labels.about')}
        </a>
        <a class='text-zinc-700 dark:text-white' href='#skills'>
            {t('ui.labels.skills')}
        </a>
        <a class='text-zinc-700 dark:text-white' href='#experience'>
            {t('ui.labels.experience')}
        </a>
        <a class='text-zinc-700 dark:text-white' href='#contact-form'>
            {t('ui.labels.contact')}
        </a>
    </div>

    <div class='hidden items-center gap-4 md:flex'>
        <a
            class='mr-0.5 min-w-fit rounded-md border-2 border-black px-4 py-1 text-sm font-semibold duration-200 hover:border-slate-400 hover:bg-slate-400 hover:text-white dark:border-teal-400 dark:text-teal-400 dark:hover:bg-teal-400 dark:hover:text-[#2A2A67]'
            href='./CV.pdf'
            download='CV.pdf'
        >
            {t('ui.buttons.downloadCV')}
        </a>
        <ThemeSelector />
        <LanguageSelector />
    </div>
</nav>
