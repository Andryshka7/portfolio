---
import { Icon } from 'astro-icon/components'
---

<div
    class='theme-toggler relative flex w-16 cursor-pointer items-center justify-between rounded-full bg-zinc-500 px-2.5 py-1.5 text-white dark:bg-[#2A2A67]'
>
    <div class='absolute right-9 h-5 w-5 rounded-full bg-white dark:right-2'></div>
    <Icon name='Sun' height={18} width={18} />
    <Icon name='Moon' height={18} width={18} />
</div>

<script>
    document.querySelectorAll('.theme-toggler').forEach((element) =>
        element.addEventListener('click', () => {
            const theme = localStorage.getItem('theme')
            localStorage.setItem('theme', theme === 'light' ? 'dark' : 'light')
            document.documentElement.classList.toggle('dark')
        })
    )
</script>
