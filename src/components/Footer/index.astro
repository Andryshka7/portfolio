---
// Footer component with simplified social links
import { Github, Linkedin, MessageCircle, Phone } from '@lucide/astro'

const year = new Date().getFullYear()

const SOCIAL_LINKS = [
    {
        name: 'GitHub',
        icon: Github,
        value: 'https://github.com/Andryshka7'
    },
    {
        name: 'LinkedIn',
        icon: Linkedin,
        value: 'https://linkedin.com/in/andrey-lapchik-03b72326b'
    },

    {
        name: 'Telegram',
        icon: MessageCircle,
        value: 'https://t.me/andryshka16'
    },

    {
        name: 'WhatsApp',
        icon: Phone,
        value: 'https://wa.me/+37128176717'
    }
]
---

<section class='bg-gray-800 py-16' data-nosnippet>
    <div class='max-w-8xl mx-auto px-4 sm:px-6 lg:px-8'>
        <!-- Social Links -->
        <div class='flex flex-col items-center space-y-8'>
            <h3 class='text-2xl font-bold text-white'>Connect With Me</h3>
            <p class='max-w-md text-center text-gray-300'>
                Follow my work, check out my projects, or reach out directly through your preferred
                platform.
            </p>

            <div class='grid grid-cols-2 justify-center gap-4 sm:grid-cols-4'>
                {
                    SOCIAL_LINKS.map((link) => (
                        <a
                            href={link.value}
                            target='_blank'
                            rel='noopener noreferrer'
                            class='flex items-center justify-center gap-2 rounded-lg border border-gray-600 bg-gray-700/50 px-4 py-3 text-gray-300 transition-all duration-200 hover:border-cyan-500 hover:bg-gray-700 hover:text-white'
                        >
                            <link.icon class='h-5 w-5' />
                            <span>{link.name}</span>
                        </a>
                    ))
                }
            </div>
        </div>

        <!-- Footer Bottom -->
        <div class='mt-12 border-t border-gray-600 pt-8'>
            <div class='flex flex-col items-center justify-center gap-4 text-center'>
                <p class='text-gray-400'>
                    Â© {year} Andrey Lapchik. All rights reserved.
                </p>
            </div>
        </div>
    </div>
</section>
