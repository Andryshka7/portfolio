---
import { getRelativeLocaleUrl } from 'astro:i18n'
import { useTranslations } from 'i18n'
import type { Locale } from 'types'

import LanguageSelector from '../shared/LanguageSelector.astro'
import ThemeSelector from '../shared/ThemeSelector.astro'

const locale = Astro.currentLocale as Locale
const t = useTranslations(locale)
---

<nav class='hidden w-full items-center justify-between px-11 py-6 lg:flex'>
    <a
        class='-mt-1.5 text-4xl font-bold text-zinc-800 dark:text-white'
        href={getRelativeLocaleUrl(locale)}
    >
        Portfolio
    </a>

    <div class='ml-12 mx-4 hidden min-w-fit items-center gap-8 md:flex'>
        <a
            class='text-zinc-700 dark:text-white font-semibold text-xl w-fit min-w-fit'
            href='#about'
        >
            {t('navbar.navigators.about')}
        </a>
        <a
            class='text-zinc-700 dark:text-white font-semibold text-xl w-fit min-w-fit'
            href='#skills'
        >
            {t('navbar.navigators.skills')}
        </a>
        <a
            class='text-zinc-700 dark:text-white font-semibold text-xl w-fit min-w-fit'
            href='#experience'
        >
            {t('navbar.navigators.experience')}
        </a>
        <a
            class='text-zinc-700 dark:text-white font-semibold text-xl w-fit min-w-fit'
            href='#contact'
        >
            {t('navbar.navigators.contact')}
        </a>
    </div>

    <div class='hidden items-center gap-4 md:flex'>
        <a
            class='font-semibold mr-0.5 rounded-md text-sm px-4 py-1 border-2 border-black dark:border-teal-400 dark:text-teal-400 dark:hover:text-[#2A2A67] hover:border-slate-400 hover:bg-slate-400 hover:text-white dark:hover:bg-teal-400 duration-200'
            href='./CV.pdf'
            download='CV.pdf'
        >
            Download CV
        </a>
        <ThemeSelector />
        <LanguageSelector />
    </div>
</nav>
