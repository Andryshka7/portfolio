---
import { IoIosCloseCircleOutline } from 'react-icons/io'
import { ThemeSelector, LanguageSelector } from '../shared'
---

<nav class='flex w-full items-center justify-between px-5 py-8 lg:hidden'>
    <h1 class='-mt-1.5 text-4xl font-bold text-zinc-800 dark:text-white'>Portfolio</h1>
    <svg
        width='35'
        height='35'
        viewBox='0 0 24 24'
        stroke='currentColor'
        stroke-width='2.5'
        stroke-linecap='round'
        stroke-linejoin='round'
        class='dark:text-white'
        id='open-navbar'
    >
        <line x1='4' x2='20' y1='12' y2='12'></line>
        <line x1='4' x2='20' y1='6' y2='6'></line>
        <line x1='4' x2='20' y1='18' y2='18'></line>
    </svg>
</nav>

<div
    class='fixed left-0 z-10 top-0 h-full w-full bg-zinc-200 dark:bg-slate-800 -translate-y-full'
    id='navbar'
>
    <div class='flex flex-col items-center h-full w-full px-10'>
        <div class='mx-8 my-10 flex w-full items-center justify-between'>
            <ThemeSelector />
            <LanguageSelector />
        </div>
        <div class='my-10 flex h-full flex-col justify-between items-center'>
            <a
                class='close-navbar text-xl font-semibold text-zinc-700 dark:text-white'
                href='#about'
            >
                About
            </a>
            <a
                class='close-navbar text-xl font-semibold text-zinc-700 dark:text-white'
                href='#skills'
            >
                Skills
            </a>
            <a
                class='close-navbar text-xl font-semibold text-zinc-700 dark:text-white'
                href='#experience'
            >
                Experience
            </a>
            <a
                class='close-navbar text-xl font-semibold text-zinc-700 dark:text-white'
                href='#contact'
            >
                Contact
            </a>
        </div>
        <svg
            fill='currentColor'
            viewBox='0 0 512 512'
            class='close-navbar my-10 text-zinc-800 transition hover:scale-105 dark:text-white'
            height='100'
            width='100'
        >
            <path
                d='M331.3 308.7L278.6 256l52.7-52.7c6.2-6.2 6.2-16.4 0-22.6-6.2-6.2-16.4-6.2-22.6 0L256 233.4l-52.7-52.7c-6.2-6.2-15.6-7.1-22.6 0-7.1 7.1-6 16.6 0 22.6l52.7 52.7-52.7 52.7c-6.7 6.7-6.4 16.3 0 22.6 6.4 6.4 16.4 6.2 22.6 0l52.7-52.7 52.7 52.7c6.2 6.2 16.4 6.2 22.6 0 6.3-6.2 6.3-16.4 0-22.6z'
            >
            </path>
            <path
                d='M256 76c48.1 0 93.3 18.7 127.3 52.7S436 207.9 436 256s-18.7 93.3-52.7 127.3S304.1 436 256 436c-48.1 0-93.3-18.7-127.3-52.7S76 304.1 76 256s18.7-93.3 52.7-127.3S207.9 76 256 76m0-28C141.1 48 48 141.1 48 256s93.1 208 208 208 208-93.1 208-208S370.9 48 256 48z'
            >
            </path>
        </svg>
    </div>
</div>

<script>
    const navbar = document.getElementById('navbar')!

    const openNavbarButton = document.getElementById('open-navbar')!
    const closeNavbarButtons = document.querySelectorAll('.close-navbar')!

    openNavbarButton.addEventListener('click', () => {
        document.documentElement.classList.toggle('overflow-hidden')
        navbar.classList.toggle('-translate-y-full')
    })

    closeNavbarButtons.forEach((element) => {
        element.addEventListener('click', () => {
            document.documentElement.classList.toggle('overflow-hidden')
            navbar.classList.toggle('-translate-y-full')
        })
    })
</script>
