---
import '../styles/index.css'
---

<!doctype html>
<html lang='en' class='dark'>
    <head>
        <meta charset='UTF-8' />
        <meta
            name='description'
            content='Full-stack developer experienced in trading platforms, e-commerce, and productivity tools'
        />
        <meta name='viewport' content='width=device-width, initial-scale=1' />
        <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
        <meta name='generator' content={Astro.generator} />

        <!-- Canonical URL -->
        <link rel='canonical' href='https://andryshka.com' />

        <!-- Open Graph -->
        <meta property='og:type' content='website' />
        <meta property='og:title' content='Andrey Lapchik' />
        <meta
            property='og:description'
            content='Full-stack developer experienced in trading platforms, e-commerce, and productivity tools'
        />
        <meta property='og:url' content='https://andryshka.com' />
        <meta property='og:image' content='/preview.png' />

        <!-- Twitter -->
        <meta name='twitter:card' content='summary_large_image' />
        <meta name='twitter:title' content='Andrey Lapchik' />
        <meta
            name='twitter:description'
            content='Full-stack developer experienced in trading platforms, e-commerce, and productivity tools'
        />
        <meta name='twitter:image' content='/preview.png' />

        <!-- Theme -->
        <meta name='theme-color' content='#0D0D0D' />
        <meta name='color-scheme' content='dark' />

        <title>Andrey Lapchik</title>

        <!-- Preload critical fonts -->
        <link rel='preconnect' href='https://fonts.googleapis.com' />
        <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    </head>
    <body class='bg-gray-900 text-gray-100 antialiased'>
        <slot />
    </body>
</html>
